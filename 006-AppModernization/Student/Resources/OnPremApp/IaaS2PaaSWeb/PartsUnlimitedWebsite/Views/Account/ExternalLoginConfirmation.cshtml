@using PartsUnlimited.Utils
@model PartsUnlimited.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}
<section>
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <h4>Associate your @ViewBag.LoginProvider account</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <p class="text-info">
                    You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
                    Please enter a user name for this site below and click the Register button to finish
                    logging in.
                </p>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address" })
                            <span class="input-group-addon">@Html.Image("login_profile_icon.png")</span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                            <span class="input-group-addon">@Html.Image("login_profile_icon.png")</span>
                        </div>
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6"></div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jquery.validate")
}