@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-page="/Session">Hello @User.Claims.First(x => x.Type.Contains("givenname")).Value @User.Claims.First(x => x.Type.Contains("surname")).Value!</a></li>
        <li><a asp-page="/Signout">Sign out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-page="/Session">Sign in</a></li>
    </ul>
}
